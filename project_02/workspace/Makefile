# @ - rule's name
# < - dependencies' name

# Compilation macros
CC = gcc
CC_FLAGS = -Wextra
SRC_DIR = src
LIBRARY_DIR = lib
INCLUDE_DIR = include
MAIN_C = $(SRC_DIR)/main.c
IMAGE_IO_LIB_C = $(LIBRARY_DIR)/image_io_lib.c
IMAGE_IO_LIB_O = $(LIBRARY_DIR)/image_io_lib.o
SINGLETHREAD_FILTER_LIB_C = $(LIBRARY_DIR)/singlethread_filter_lib.c
SINGLETHREAD_FILTER_LIB_O = $(LIBRARY_DIR)/singlethread_filter_lib.o
MULTITHREAD_FILTER_LIB_C = $(LIBRARY_DIR)/multithread_filter_lib.c
MULTITHREAD_FILTER_LIB_O = $(LIBRARY_DIR)/multithread_filter_lib.o
MULTIPROCESS_FILTER_LIB_C = $(LIBRARY_DIR)/multiprocess_filter_lib.c
MULTIPROCESS_FILTER_LIB_O = $(LIBRARY_DIR)/multiprocess_filter_lib.o
CONVOLUTION_LIB_C = $(LIBRARY_DIR)/convolution_lib.c
CONVOLUTION_LIB_O = $(LIBRARY_DIR)/convolution_lib.o
CHRONOMETER_LIB_C = $(LIBRARY_DIR)/chronometer_lib.c
CHRONOMETER_LIB_O = $(LIBRARY_DIR)/chronometer_lib.o
TARGET_C = main 
BJS = $(SRCS:.c=.o)

# Test macros
BASH = sh
TEST_SCRIPT = test.sh

# Zip building macros
ZIP = zip
PROJECT_NAME = project
ZIPFILE = $(PROJECT_NAME).zip
EXTENSIONS = *.c *.h *.sh

.PHONY: depend clean

# Rule for compiling the project
all: $(TARGET_C)

$(TARGET_C): $(MAIN_C) $(IMAGE_IO_LIB_O) $(CONVOLUTION_LIB_O) $(SINGLETHREAD_FILTER_LIB_O) $(MULTITHREAD_FILTER_LIB_O) $(MULTIPROCESS_FILTER_LIB_O) $(CHRONOMETER_LIB_O)
	$(CC) -o$@ $(MAIN_C) $(IMAGE_IO_LIB_O) $(CONVOLUTION_LIB_O) $(SINGLETHREAD_FILTER_LIB_O) $(MULTITHREAD_FILTER_LIB_O) $(MULTIPROCESS_FILTER_LIB_O) $(CHRONOMETER_LIB_O) $(CC_FLAGS) -I$(INCLUDE_DIR) -lfreeimage -lpthread

$(IMAGE_IO_LIB_O): $(IMAGE_IO_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -o$@	

$(CONVOLUTION_LIB_O): $(CONVOLUTION_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -o$@ 

$(SINGLETHREAD_FILTER_LIB_O): $(SINGLETHREAD_FILTER_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -o$@ 

$(MULTITHREAD_FILTER_LIB_O): $(MULTITHREAD_FILTER_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -lpthread -o$@ 

$(MULTIPROCESS_FILTER_LIB_O): $(MULTIPROCESS_FILTER_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -o$@ 

$(CHRONOMETER_LIB_O): $(CHRONOMETER_LIB_C)
	$(CC) -c $< $(CC_FLAGS) -I$(INCLUDE_DIR) -o$@ 

# Rule for executing test script
test: all
	$(BASH) $(TEST_SCRIPT)

# Rule for zipping the project
zip: clean
	$(ZIP) -R $(ZIPFILE) Makefile $(EXTENSIONS)

# Rule for cleaning the archives generated by make 
clean:
	$(RM) ./$(TARGET_C)
	$(RM) $(LIBRARY_DIR)/*.o
	$(RM) ./*out.jpg
	$(RM) ./$(ZIPFILE)
